{
	"compilerOptions": {
		"noEmit": true,
		"checkJs": true,
		"target": "es2017",
		"lib": [
			"dom",
			"dom.iterable",
			"es2017"
		],
		"jsx": "preserve",
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"baseUrl": "./src"
	},
	"include": [
		"**/*.js"
	],
	"exclude": [
		"**/node_modules"
	]
}